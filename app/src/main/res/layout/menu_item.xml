<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="180dp"
    android:layout_height="60dp">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/grey_background"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/frameLayout5"></FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="5dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView4"
            android:src="@android:drawable/ic_menu_report_image"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/frameLayout5"
            android:layout_alignStart="@+id/frameLayout5"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/title_basket"
            android:id="@+id/textView_item_name"
            android:layout_gravity="center_vertical"
            android:textColor="@color/grey_dark"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp" />
    </LinearLayout>
</RelativeLayout>