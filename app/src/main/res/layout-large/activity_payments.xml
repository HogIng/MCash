<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cecece" >

    <include
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        layout="@layout/navigationbar"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/include5" />

    <fragment
        android:layout_width="750dp"
        android:layout_height="match_parent"
        android:name="com.example.inga.mcash.fragment.PaymentsFragment"
        android:id="@+id/fragmentPayments"
        tools:layout="@layout/fragment_payments"
        android:layout_below="@+id/include5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.example.inga.mcash.fragment.PaymentFragment"
        android:id="@+id/fragmentPayment"
        android:layout_alignTop="@+id/fragmentPayments"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        tools:layout="@layout/fragment_paymentdetails"
        android:layout_toRightOf="@+id/fragmentPayments"
        android:layout_toEndOf="@+id/fragmentPayments" />
</RelativeLayout>
