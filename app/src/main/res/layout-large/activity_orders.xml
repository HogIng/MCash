<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cecece" >

    <include
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        layout="@layout/navigationbar"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/include5" />

    <fragment
        android:layout_width="750dp"
        android:layout_height="match_parent"
        android:name="com.example.inga.mcash.fragment.OrdersFragment"
        android:id="@+id/fragmentOrders"
        android:layout_below="@+id/include5"
        tools:layout="@layout/fragment_payments" />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.example.inga.mcash.fragment.OrderFragment"
        android:id="@+id/fragmentOrder"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        tools:layout="@layout/fragment_paymentdetails"
        android:layout_toEndOf="@+id/fragmentOrders"
        android:layout_toRightOf="@+id/fragmentOrders"
        android:layout_below="@+id/include5" />
</RelativeLayout>
