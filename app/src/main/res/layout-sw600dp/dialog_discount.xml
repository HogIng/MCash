<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ececec">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include6"
        android:layout_centerHorizontal="true"
        android:padding="40dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/linearLayout7">

            <EditText
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/editText_percentage"
                android:layout_below="@+id/frameLayout2"
                android:layout_centerHorizontal="true"
                android:hint="@string/percentage" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/sign_discount"
                android:id="@+id/textView_unit"
                android:layout_alignBottom="@+id/editText_percentage"
                android:layout_toRightOf="@+id/editText_percentage"
                android:layout_toEndOf="@+id/editText_percentage"
                android:gravity="center_vertical"
                android:textColor="#4c4c4c" />
        </LinearLayout>

    </LinearLayout>

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/titlebar_dialog"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/include6" />

</RelativeLayout>