<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:padding="@dimen/activity_margin"
    android:background="@color/grey_background">

    <ListView
        android:id="@+id/listView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:dividerHeight="10dp"
        android:divider="@color/grey_background"
        android:layout_above="@+id/linearLayout"
        android:layout_below="@+id/frameLayout2" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/textView_totalamount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_null_â‚¬"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="36sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_marginBottom="8dp" />

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout9"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <Button
                    style="@style/button"
                    android:id="@+id/button_clear"
                    android:text="@string/lable_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/grey_dark" />

                <Button
                    android:id="@+id/button_discount"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:text="@string/sign_discount"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:layout_marginRight="10dp"
                    style="@style/button"
                    android:background="@color/grey_dark" />

                <Button
                    android:id="@+id/button_manuel"
                    android:text="@string/plus"
                    android:layout_marginRight="10dp"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:background="@color/grey_dark"
                    style="@style/button" />

            </LinearLayout>

            <Button
                style="@style/button"
                android:id="@+id/buttonOrder"
                android:text="@string/order"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/grey_dark" />
        </LinearLayout>

        <Button
            style="@style/button"
            android:id="@+id/button_payment"
            android:text="@string/title_payment"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:background="@color/green" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/frameLayout2"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/shopping_cart_empty"
            android:id="@+id/textView2"
            android:layout_gravity="center"
            android:padding="20dp"
            android:textColor="@color/grey_dark" />
    </FrameLayout>
</RelativeLayout>